@model Entities.Models.PortalUserWallet
@{
    ViewData["Title"] = "Edit";
    Portal.Controllers.Api.PortalUserController PortalUserController = new Portal.Controllers.Api.PortalUserController();

    Entities.Models.PortalUser CurrentUser = new Entities.Models.PortalUser();
    CurrentUser = PortalUserController.GetItemByName(User.Identity.Name);
    Model.PortalUserId = CurrentUser.Id;
}
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">@Model.PortalWallet.Name</h4>
                <p class="card-category">Edit your Wallet</p>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form asp-action="Edit">
                    @Html.HiddenFor(x => x.PortalWalletId)
                    @Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x => x.PortalUserId)

                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Name</label>
                                @Html.TextBoxFor(m => m.PortalWallet.Name, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Secret</label>
                                @Html.TextBoxFor(m => m.PortalWallet.Secret, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Access Key</label>
                                @Html.TextBoxFor(m => m.PortalWallet.AccessKey, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group bmd-form-group">
                                <label class="bmd-label-floating">Password</label>
                                @Html.TextBoxFor(m => m.PortalWallet.Password, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">Save</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>

    </div>



</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
